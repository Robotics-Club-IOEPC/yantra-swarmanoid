#!/usr/bin/env bash
set -e
if [[ ! -d "/home/scientiac/Storage/Experiments/gitsync/robotics/yantra-swarmanoid" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/scientiac/Storage/Experiments/gitsync/robotics/yantra-swarmanoid")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/scientiac/Storage/Experiments/gitsync/robotics/yantra-swarmanoid" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/scientiac/Storage/Experiments/gitsync/robotics/yantra-swarmanoid/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/scientiac/Storage/Experiments/gitsync/robotics/yantra-swarmanoid/.envrc" "/home/scientiac/Storage/Experiments/gitsync/robotics/yantra-swarmanoid/.direnv"/*.rc
